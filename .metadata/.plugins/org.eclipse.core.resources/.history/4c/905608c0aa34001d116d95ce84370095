#include <stdio.h>
#include <stdlib.h>

int main(void){
	setbuf(stdout, NULL);

	int opcion;
	int bandera = 0;




		printf("1- Loguearse"
				"2- Comprar"
				"3- Ver compras"
				"4- Vender"
				"5- Salir");
		scanf("%d", &opcion);

		switch(opcion){

			case "1":
				printf("Se logio");
				bandera = 1;
			break;
			case "2":

				printf("No se logio");
				bandera = 0;
			break;
			case "3":
				printf("Esta viendo sus compras");

						if(bandera == 0){
						printf("No se logio");
						}
			break;
			case "4":

			break;
			case "5":

			break;
		}




	return EXIT_SUCCESS;
}
